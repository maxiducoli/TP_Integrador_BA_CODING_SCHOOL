<!DOCTYPE html>
<html lang="en">
<%- include ('partials/headMain') %> 
<body>
<%-  include('partials/headerMain') %> 
    <main class="main">
      
<div class="ProductsContainer">

<% productos.forEach(producto => { %>
    <div class="album py-5 bg-light">
        <div class="container">
    
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <div class="col">
              <div class="card shadow-sm">
                <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="<%= productos.image %>" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title><%= productos.image %></title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em"><%= productos.image %></text></svg>
    
                <div class="card-body">
                  <p class="card-text"><%= producto.description %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a type="button" class="btn btn-sm btn-outline-secondary" href="/products/product/:<%= producto.id %>">Ver</a>
                      <a type="button" class="btn btn-sm btn-outline-secondary" href="/products/edit/:<%= producto.id %>">Edit</a>
                    </div>
                    <small class="text-muted"><%= producto.price %></small>
                  </div> 
                </div>
              </div>
            </div>
            
          </div>
        </div>
      </div>
<% }) %>
</div>


    </main>
<!-- FOOTER-->
<%- include('partials/footerMain') %> 
</body>
</html>